doctype html
html(lang="en").h-full
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="https://cdn.tailwindcss.com")        
        title Socket Chat
    body.p-1.h-full.p-2
        header.grid.justify-items-center.w-full
            h1.font-bold.text-3xl Noom
        main.h-full.grid.grid-flow-row
            div#welcome
                form
                    input(placeholder="room name", required, type="text").mb-4.h-12.pl-4.mr-4.outline-none
                    button.w-32.h-12.bg-cyan-600.rounded-lg Enter Room
                h4 Open Rooms: 
                ul
            div#room.relative
                h3.h-16
                h3.myname.h-16.font-bold
                form#name
                    input(placeholder="Nickname", required, type="text").mr-4.outline-none.h-12.p-4
                    button.w-32.h-16.bg-cyan-600.h-12.rounded-lg Send
                ul
                form#msg.w-full.place-self-end.absolute.bottom-8
                    input(placeholder="message", required, type="text").mr-4.w-48.outline-none.h-12
                    button.w-32.h-12.bg-gray-600.rounded-lg.text-white Enter Message
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")
        